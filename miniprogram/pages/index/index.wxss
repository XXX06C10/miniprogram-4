/* pages/index/index.wxss */
page {
  background-color: #FFF0F5;
}

.container {
  padding: 20rpx;
  padding-bottom: 150rpx;
}
.diary-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 15rpx rgba(255, 182, 193, 0.2);
}
.diary-date {
  font-size: 26rpx;
  color: #FF69B4;
  margin-bottom: 15rpx;
  font-weight: bold;
}
.diary-content {
  font-size: 30rpx;
  color: #555;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.diary-images {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
  overflow: hidden;
}
.cover-image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.image-count {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  background: rgba(255, 105, 180, 0.7);
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}
.add-btn {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(135deg, #FFB6C1, #FF69B4);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 25rpx rgba(255, 105, 180, 0.5);
  z-index: 100;
  transition: all 0.3s;
}
.add-btn:active {
  transform: scale(0.9);
}
.add-btn text {
  color: #fff;
  font-size: 60rpx;
  margin-top: -4rpx;
  font-weight: normal;
}
.empty-tip {
  text-align: center;
  color: #FFB6C1;
  margin-top: 200rpx;
  font-size: 30rpx;
}
