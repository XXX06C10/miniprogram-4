/* pages/diary/write.wxss */
page {
  background-color: #FFF0F5; /* LavenderBlush */
}

.container {
  padding: 30rpx;
  display: block; /* Override app.wxss flex layout */
  width: 100%;
  box-sizing: border-box;
}

.form-group {
  margin-bottom: 30rpx;
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.3);
  width: 100%;
  box-sizing: border-box;
}

.label {
  font-size: 28rpx;
  color: #FF69B4; /* HotPink */
  margin-bottom: 20rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.label::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 28rpx;
  background-color: #FF69B4;
  margin-right: 15rpx;
  border-radius: 4rpx;
}

.picker {
  font-size: 32rpx;
  color: #333;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #FFE4E1;
}

.content-input {
  width: 100%;
  height: 400rpx;
  min-height: 400rpx; /* Ensure height */
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  box-sizing: border-box;
  z-index: 1; /* Ensure it's on top */
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #FFB6C1;
  margin-top: 10rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.image-item {
  position: relative;
  width: 210rpx;
  height: 210rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

/* Remove margin for every 3rd item to fit perfectly if needed, 
   but flex-wrap handles it. Just ensure width fits. 
   (750 - 60 padding) / 3 = 230. 210 is safe. */

.image-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.6);
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 36rpx;
  font-size: 30rpx;
  z-index: 10;
}

.add-image {
  width: 210rpx;
  height: 210rpx;
  background: #FFF0F5;
  border: 2rpx dashed #FFB6C1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 15rpx;
  box-sizing: border-box;
}

.add-image text {
  font-size: 80rpx;
  color: #FFB6C1;
  font-weight: 300;
  margin-top: -10rpx;
}

.submit-btn {
  margin-top: 60rpx;
  width: 100% !important;
  background: linear-gradient(to right, #FFB6C1, #FF69B4);
  color: white;
  border-radius: 50rpx;
  font-size: 34rpx;
  font-weight: 500;
  box-shadow: 0 6rpx 20rpx rgba(255, 105, 180, 0.4);
  padding: 24rpx 0;
}

.submit-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}